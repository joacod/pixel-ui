{
  "name": "pixel-ui",
  "version": "0.0.2",
  "description": "Opinionated pixel-art styled React component library built on Base UI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles/base.css",
    "./preset": {
      "types": "./dist/styles/preset.d.ts",
      "import": "./dist/styles/preset.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "type-check": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "pixel-art",
    "retro",
    "8-bit",
    "ui-components",
    "react",
    "base-ui",
    "tailwind",
    "tailwindcss"
  ],
  "author": {
    "name": "Joaquin Diaz",
    "url": "https://github.com/joacod"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joacod/pixel-ui.git"
  },
  "homepage": "https://github.com/joacod/pixel-ui#readme",
  "bugs": {
    "url": "https://github.com/joacod/pixel-ui/issues"
  },
  "peerDependencies": {
    "@base-ui-components/react": "^1.0.0-beta.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@base-ui-components/react": "1.0.0-beta.4",
    "@changesets/cli": "2.29.7",
    "@types/node": "24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwindcss": "4.1.14",
    "tsdown": "0.15.6",
    "typescript": "5.9.3"
  }
}
